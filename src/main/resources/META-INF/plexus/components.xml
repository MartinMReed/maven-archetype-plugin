<component-set>
	<components>
		<component>
			<role-hint>mypackage</role-hint>
			<role>org.apache.maven.lifecycle.mapping.LifecycleMapping</role>
			<implementation>org.apache.maven.lifecycle.mapping.DefaultLifecycleMapping</implementation>
			<configuration>
				<lifecycles>
					<lifecycle>
						<id>clean</id>
						<phases>
							<pre-clean>com.yourcompany:maven-archetype-plugin:pre-clean</pre-clean>
							<clean>org.apache.maven.plugins:maven-clean-plugin:clean,
								com.yourcompany:maven-archetype-plugin:clean</clean>
						</phases>
					</lifecycle>
					<lifecycle>
						<id>default</id>
						<phases>
							<validate>com.yourcompany:maven-archetype-plugin:validate</validate>
							<initialize>com.yourcompany:maven-archetype-plugin:initialize</initialize>
							<generate-sources>com.yourcompany:maven-archetype-plugin:dependency-copy,
								com.yourcompany:maven-archetype-plugin:generate-sources
							</generate-sources>
							<process-sources>com.yourcompany:maven-archetype-plugin:process-sources</process-sources>
							<generate-resources>com.yourcompany:maven-archetype-plugin:generate-resources</generate-resources>
							<process-resources>com.yourcompany:maven-archetype-plugin:process-resources</process-resources>
							<compile>com.yourcompany:maven-archetype-plugin:compile</compile>
							<prepare-package>com.yourcompany:maven-archetype-plugin:prepare-package</prepare-package>
							<package>com.yourcompany:maven-archetype-plugin:package</package>
							<install>com.yourcompany:maven-archetype-plugin:install</install>
						</phases>
					</lifecycle>
				</lifecycles>
			</configuration>
		</component>
		<component>
			<role-hint>a</role-hint>
			<role>org.apache.maven.artifact.handler.ArtifactHandler</role>
			<implementation>org.apache.maven.artifact.handler.DefaultArtifactHandler</implementation>
			<configuration>
				<extension>jar</extension>
				<packaging>mypackage</packaging>
				<type>mypackage</type>
			</configuration>
		</component>
	</components>
</component-set>
